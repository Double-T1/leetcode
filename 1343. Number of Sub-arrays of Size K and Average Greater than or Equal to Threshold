var numOfSubarrays = function(arr, k, threshold) {
    let sum = 0
    for (let i=0; i<k-1; i++) {
        sum += arr[i]
    }

    let left = 0
    let average = sum/k
    let count = 0
    for (let i=k-1; i<arr.length; i++) {
        average += arr[i]/k
        if (average>=threshold) count++
        average -= arr[left]/k
        left++ 
    }
    return count
};
