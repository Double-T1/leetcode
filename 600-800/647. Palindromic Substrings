class Solution {
public:
    int countSubstrings(string s) {
        int count = 0;
        int n = s.size();
        for (int i=0; i<n; i++) {
            count += countPalin(i,i,s) + countPalin(i,i+1,s);
        }
        return count;
    }
private:
    int countPalin(int left, int right, string& s) {
        int count = 0;
        while (left>=0 && right<s.size() && s[left] == s[right]) {
            count++;
            left--, right++;
        }
        return count;
    }
};
