class Solution {
public:
    string addBinary(string a, string b) {
        string ans = "";
        int carry = 0, c1, c2;
        int i = a.size()-1, j = b.size()-1;
        while (i>=0 || j>=0 || carry) {
            c1 = i>=0? a[i]-'0': 0;
            c2 = j>=0? b[j]-'0': 0;
            if (carry&&c1&&c2) {
                ans = '1' + ans;
            } else if (carry&&c1 || carry&&c2 || c1&&c2) {
                ans = '0' + ans;
                carry = 1;
            } else if (carry || c1 || c2) {
                ans = '1' + ans;
                carry = 0;
            } else {
                ans = '0' + ans;
            }
            i--,j--;
        }
        return ans;
    }
};
